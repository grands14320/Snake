import pygame
class game():
    def __init__(self):
        pygame.init()  # inicjalizuje moduly pythona
        self.clock = pygame.time.Clock()
        self.window = pygame.display.set_mode((800, 600))  # tworzy okno
        pygame.display.set_caption("wunsz")  # ustawia tytuł
        self.x = 300
        self.y = 300
        self.kieruj_x = 0
        self.kieruj_y = 0
        self.gameExit = False
        while not self.gameExit:
            # petla zbierajaca zdarzenia
            for event in pygame.event.get():
                if event.type == pygame.QUIT:
                    self.gameExit = True
                if event.type == pygame.KEYDOWN:
                    if event.key == pygame.K_LEFT:
                        self.kieruj_x = -60
                        self.kieruj_y = 0
                    elif event.key == pygame.K_RIGHT:
                        self.kieruj_x = 60
                        self.kieruj_y = 0
                    elif event.key == pygame.K_UP:
                        self.kieruj_y = -60
                        self.kieruj_x = 0
                    elif event.key == pygame.K_DOWN:
                        self.kieruj_y = 60
                        self.kieruj_x = 0
            if self.x >= 800 or self.x < 0 or self.y >= 600 or self.y < 0:
                self.gameExit = True
            self.x += self.kieruj_x
            self.y += self.kieruj_y
            self.clock.tick(10)
            game.draw(self)

    def draw(self):
        self.window.fill((65, 65, 65))  # okresla kolor tłą
        pygame.draw.rect(self.window, (90, 90, 90), (self.x, self.y, 60, 60))  # maluje kwadrat
        pygame.display.update()  # mozna podac jako argument obiekt ktory ma odswierzyc,brak arg == wszystko odswierza

    def tick(self):
        pass
if __name__ == "__main__":
    g = game()
